{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "real-or-render",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "inline": true
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Post Daily Game",
        "description": "post daily game",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-daily-game"
      }
    ]
  },
  "forms": {
    "postDailyGameForm": "/internal/form/post-daily-game-form"
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "real_or_render_dev"
  },
  "scheduler": {
    "tasks": {
      "create-game-post-task": {
        "endpoint": "/internal/scheduler/create-game-post",
        "cron": "0 7 * * *"
      }
    }
  },
  "permissions": {
    "http": {
      "enable": true,
      "domains": [
        "ugupzznjxhwwpowfhpmh.supabase.co"
      ]
    },
    "media": true,
    "reddit": {
      "enable": true,
      "asUser": [
        "SUBMIT_COMMENT"
      ]
    }
  }
}